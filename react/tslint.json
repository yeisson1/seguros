{
  "extends": [
    "tslint-react-hooks"
  ],
  "rulesDirectory": [
    "tslint-config-airbnb",
    "tslint-plugin-prettier",
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  },
  "rules": {
    "prettier": [
      true,
      {
        "semicolon": [
          true,
          "always"
        ],
        "singleQuote": true,
        "printWidth": 110
      }
    ],
    "react-hooks-nesting": "error",
    "interface-name": [
      true,
      "never-prefix"
    ],
    "jsx-no-lambda": false,
    "import-name": false,
    "max-line-length": [
      true,
      110
    ],
    "variable-name": false,
    "no-boolean-literal-compare": true,
    "ter-arrow-parens": [
      true,
      "as-needed"
    ],
    "align": [
      true,
      "parameters"
    ]
  }
}